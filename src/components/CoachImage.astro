---
import { Picture } from "astro:assets";

interface Props {
    imagePath: string;
    altText: string;
}

let { imagePath, altText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "@assets/entrenadores/*.{jpeg,jpg,png,gif,webp}",
);

if (!images[imagePath]) imagePath = "/src/assets/entrenadores/silueta-persona.webp";
---

<Picture src={images[imagePath]()} alt={altText} />
