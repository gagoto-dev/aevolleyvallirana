---
import PlayerImage from "./PlayerImage.astro";

const { name, dorsal, position } = Astro.props;
---

<div
    class="bg-zinc-800 bg-opacity-20 rounded-2xl p-6 text-xl min-w-72
            w-full max-w-[1440px] flex flex-col items-center
            sm:flex-row h-[66.6667vh] min-h-[600px] sm:justify-evenly"
>
    <div class="w-80 sm:w-96 max-sm:z-10">
        {/* <img src={`/master-${dorsal}.png`} alt={name} /> */}
        <!-- <img src={`/master-10.png`} alt={name} /> -->
        <PlayerImage imagePath=`/src/assets/master-${dorsal}.png` altText={name} />
    </div>
    <div class="flex flex-col items-center sm:self-end mb-20 gap-4">
        <h1
            class="dorsal max-sm:z-20 max-sm:-mt-10 max-sm:mb-10 mb-14 text-white pt-4 text-[10rem] sm:text-[16rem]"
        >
            {dorsal}
        </h1>
        <h3 class="max-sm:z-10 text-4xl sm:text-7xl text-white">
            {name}
        </h3>
        <h5 class="max-sm:z-10 -mt-4 text-xl sm:text-3xl text-slate-300">
            {position}
        </h5>
    </div>
</div>
