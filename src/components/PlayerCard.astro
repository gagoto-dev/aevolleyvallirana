---
import PlayerImage from "./PlayerImage.astro";

const { name, dorsal, position } = Astro.props;
---

<div
    class="player group bg-black-opaque rounded-2xl text-xl p-8 min-w-52
            w-full max-w-96 flex flex-col items-center
            sm:h-[55vh] min-h-fit sm:justify-evenly"
>
    <div
        class="group-hover:scale-105 transition-transform duration-200 w-full sm:w-80 aspect-[4/3] max-sm:z-10 flex justify-center items-center"
    >
        <PlayerImage
            imagePath=`/src/assets/jugadores/master-${dorsal}.webp`
            altText={name}
        />
    </div>
    <div
        class="sm:group-hover:scale-105 transition-transform duration-200 flex flex-col items-center gap-4"
    >
        <h1
            class="dorsal max-sm:z-20 max-sm:-mt-10 max-sm:mb-10 mb-14 text-white pt-4 text-[10rem] sm:text-[12rem] leading-4"
        >
            {dorsal}
        </h1>
        <h3 class="max-sm:z-10 text-4xl sm:text-7xl text-white">
            {name}
        </h3>
        <h5 class="max-sm:z-10 -mt-4 text-xl sm:text-3xl text-slate-300">
            {position}
        </h5>
    </div>
</div>
