---
import { Picture } from "astro:assets";

interface Props {
    imagePath: string;
    altText: string;
}

let { imagePath, altText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "@assets/jugadores/*.{jpeg,jpg,png,gif}",
);

if (!images[imagePath]) imagePath = "/src/assets/jugadores/silueta-persona.png";
---

<Picture src={images[imagePath]()} alt={altText} />
