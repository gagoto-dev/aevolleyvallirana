---
import { coaches } from "@lib/consts";
import CoachCard from "./CoachCard.astro";
---

<div 
    class:list={[
        "flex flex-col sm:flex-row",
        "max-w-[80%] mt-10 gap-8",
        "max-md:auto-rows-auto max-md:grid-cols-1 max-md:gap-4 max-md:max-w-[90%]",
        "justify-between"
    ]}>
    {coaches.map((coach) => <CoachCard {...coach} />)}
</div>
