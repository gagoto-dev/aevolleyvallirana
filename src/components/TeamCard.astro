---
const { key, name, image, description } = Astro.props;
---

<a
    href={`/equipos/${key}`}
    class="bg-black bg-opacity-35 rounded-2xl p-4 text-xl my-4 w-[30%] min-w-60
    hover:scale-105 transition-transform duration-300 max-md:w-full"
>
    <img class="aspect-auto rounded-2xl" src={image} alt={`${name} image`} />
    <div>
        <h1 class="text-3xl text-white pt-4">{name}</h1>
        <h3 class="text-slate-200 text-lg">{description}</h3>
    </div>
</a>
