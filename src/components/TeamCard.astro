---
const { key, name, image, description } = Astro.props;
---

<a
    href={`/equipos/${key}`}
    class="group bg-black bg-opacity-35 rounded-2xl p-4 text-xl my-4"
>
    <div class="w-full h-full my-0 mx-auto flex flex-col items-center justify-center">
        <div class="group-hover:scale-95 transition-transform duration-300 aspect-auto flex items-center">
            <img
                class="rounded-2xl self-center object-cover min-w-40 "
                src={image?image:"/work.png"}
                alt={`${name}`}
            />
        </div>
        <div class="w-full px-2 self-end">
            <h1 class="text-3xl text-white pt-4">{name}</h1>
            <h3 class="text-slate-200 text-lg">{description}</h3>
        </div>
    </div>
</a>
