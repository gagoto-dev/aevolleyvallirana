---
const { key, name, image, description } = Astro.props;
---

<a
    href={`/equipos/${key}`}
    class="bg-black bg-opacity-35 rounded-2xl p-4 text-xl my-4
    hover:scale-105 transition-transform duration-300"
>
    <div class="w-full my-0 mx-auto flex flex-col items-left justify-between">
        <div class="aspect-auto">
            <img
                class="rounded-2xl self-center object-cover"
                src={image}
                alt={`${name}`}
            />
        </div>
        <div class="w-[90%]">
            <h1 class="text-3xl text-white pt-4">{name}</h1>
            <h3 class="text-slate-200 text-lg">{description}</h3>
        </div>
    </div>
</a>
