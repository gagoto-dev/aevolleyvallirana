---
const { name, key } = Astro.props;

import CoachImage from "@components/CoachImage.astro";
---

<div
    class="bg-black bg-opacity-35 rounded-2xl p-6 text-xl my-4 w-96 min-w-72
    hover:scale-95 transition-transform duration-150 max-md:w-full
    flex flex-col items-center"
>
    <CoachImage
        imagePath=`/src/assets/entrenadores/${key}.webp`
        altText={name}
    />
    <h1 class="text-3xl text-white pt-4">{name}</h1>
</div>
