---
const { title } = Astro.props;
---

<html lang="cat">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="shortcut icon"
            href="/icons/favicon.ico"
            type="image/x-icon"
        />
        <title>{title}</title>
        <style is:global>
            @font-face {
                font-family: "Basalte-Fond";
                src: url("/src/assets/fonts/Basalte-Fond.woff2") format("woff2");
                font-weight: normal;
                font-style: normal;
            }

            .dorsal {
                font-family: "Basalte-Fond", "Trebuchet MS",
                    "Lucida Sans Unicode", "Lucida Grande", "Lucida Sans", Arial,
                    sans-serif;
            }

            * {
                box-sizing: border-box;
                color-scheme: dark;
                font-family:
                    system-ui,
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    Oxygen,
                    Ubuntu,
                    Cantarell,
                    "Open Sans",
                    "Helvetica Neue",
                    sans-serif;
            }
            @tailwind base;

            @layer base {
                .bg-main {
                    @apply bg-fixed bg-gradient-to-t from-blue-950 to-blue-300 bg-opacity-10;
                }

                .bg-main-reverse {
                    @apply bg-main bg-gradient-to-b;
                }

                .bg-main-left {
                    @apply bg-main bg-gradient-to-l;
                }

                .bg-main-right {
                    @apply bg-main bg-gradient-to-r;
                }
            }
        </style>
    </head>
    <body>
        <slot />
    </body>
</html>
