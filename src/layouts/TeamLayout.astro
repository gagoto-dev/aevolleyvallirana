---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { bgKey } = Astro.props;
---

<!doctype html>
<html lang="cat">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="shortcut icon"
			href="/icons/favicon.ico"
			type="image/x-icon"
		/>
		<title>VÃ²lei Vallirana</title>
		<style is:global>
			@font-face {
				font-family: "Basalte-Fond";
				src: url("/src/assets/fonts/Basalte-Fond.woff2") format("woff2");
				font-weight: normal;
				font-style: normal;
			}

			.dorsal {
				font-family: "Basalte-Fond", "Trebuchet MS",
					"Lucida Sans Unicode", "Lucida Grande", "Lucida Sans", Arial,
					sans-serif;
			}

			* {
				box-sizing: border-box;
				color-scheme: dark;
				font-family:
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
			}
		</style>
	</head>
	<body>
		<main
			class:list={[
				`bg-[url('/${bgKey}.png')] bg-center bg-cover bg-no-repeat bg-origin-border`,
				"min-h-[90vh]",
				"flex flex-col items-center justify-between w-full",
				// "flex flex-col justify-center items-center",
				"pb-10"
			]}
		>
			<Header />
			<slot />
		</main>
		<section class="bg-fixed bg-gradient-to-r from-blue-800 to-blue-300 pt-10">
			<slot name="players" />
			<Footer />
		</section>
	</body>
</html>
