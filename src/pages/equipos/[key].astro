---
import PlayerCard from "@components/PlayerCard.astro";
import TeamLayout from "@layouts/TeamLayout.astro";
import { teams, findTeam } from "@lib/consts";
import AsdIcon from "@icons/asd.astro";

export function getStaticPaths() {
    return teams.map((team) => ({ params: { key: team.key } }));
}

const { key } = Astro.params;
const team = findTeam(key);
---

<TeamLayout bgKey=`${key}` name={team?.name}>
    <div
        class:list={[
            "my-10 mx-auto",
            "xl:max-w-[75vw] max-xl:max-w-full",
            `h-fit rounded-lg w-full relative`,
            "flex flex-row flex-wrap justify-center items-center gap-8",
        ]}
    >
        <div
            class:list={[
                `main-image relative aspect-[16/9] w-[40vw] max-w-[1200px] sm:max-h-[70vh] flex mx-auto my-auto`,
            ]}
        >
            <img
                src={`/${key}.webp`}
                alt={team?.name}
                class="rounded-lg shadow-lg object-cover"
            />
        </div>
        <div class="team-name w-1/3 max-w-[40vw]">
            <h1
                class="max-xl:text-4xl xl:text-5xl text-left
            py-2 px-4 rounded-e-lg self-end mb-5"
            >
                {team?.name}
            </h1>
            <h4 class="text-pretty max-xl:text-lg xl:text-xl">
                {team?.extendedDescription || team?.description}
            </h4>
        </div>
        <AsdIcon />
    </div>
    <div class="w-full" slot="players">
        <h2 class="max-xl:text-2xl xl:text-4xl text-left ml-20 mb-10 mx-auto">
            Jugadores
        </h2>
        <div
            class="players flex flex-row flex-wrap justify-center items-center gap-8 mx-5 pb-20"
        >
            {
                Array.isArray(team?.players) &&
                    team.players.map((player) => <PlayerCard {...player} />)
            }
        </div>
    </div>
</TeamLayout>

<style is:global>
    .team-name {
        animation: fade-out linear;
        animation-timeline: view();
        animation-range: exit -100px;
    }

    .main-image {
        animation: header-animation linear forwards;
        animation-timeline: view();
        animation-range: exit;
        scale: 1;
        background-size: 100%;
    }

    @media (prefers-reduced-motion: no-preference) {
        .players .player {
            animation: none;
        }

        .players .player {
            animation: fade-in linear forwards;
            animation-timeline: view(-200px);
            animation-range: entry;
            transform-origin: left;
            scale: 0.8;
            opacity: 0;
        }
    }

    @keyframes header-animation {
        40% {
            /* scale: 100%; */
            opacity: 1;
        }
        100% {
            opacity: 0;
            /* scale: 200%; */
        }
    }

    @keyframes fade-out {
        to {
            opacity: 0;
        }
    }

    @keyframes fade-in {
        to {
            transform-origin: center;
            scale: 1;
            opacity: 1;
        }
    }
</style>
